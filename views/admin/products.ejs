<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

        <% if (prods.length > 0) { %>

            <div class="products-gallary p-5">
                <div class="container text-center">
                    <h1>
                        All Watches
                    </h1>
                <div class="row text-center">
                    <% for (let product of prods) { %>
                        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6  ">
                            <div class="watch-product text-center " data-wow-duration="1s">
                                <div class="watch-product-img">
                                <img src="/<%= product.imageUrl %>" alt="product1">
                                </div>
                                <div class="watch-product-caption">
                                <h3><%= product.title %></h3>
                                <span>$ <%= product.price %></span>
                                <p class="product__description"><%= product.description %></p>
                                
                                <div class="form">
                                    <a href="/admin/edit-product/<%= product._id %>?edit=true" class="btn btn-dark">Edit</a>
                                    <form action="/admin/delete-product" method="POST">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <input type="hidden" value="<%= product._id %>" name="productId">
                                        <button class="btn btn-dark" type="submit">Delete</button>
                                    </form>
                                </div>
                                

                                </div>
                                
                            </div>
                        </div>
                    <% } %>
                    <% } else { %>
                    <h1>No Products Found!</h1>
            <% } %>
            </div>

            <%- include('../includes/end.ejs') %>