<%- include('../includes/head.ejs') %>

    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class="p-5">
            <div class="container mt-5">
                <h2 class="mb-4">Shopping Cart</h2>
            <% if (products.length > 0) { %>
                <% products.forEach(p => { %>
                    <div class="cart-item d-flex align-items-center justify-content-between mb-2">
                        <div class="d-flex align-items-center">

                        <img src="/<%= p.productId.imageUrl %>" alt="Watch" class="watch-img mr-3">
                        <div>
                            <h5 ><%= p.productId.title %> (<%= p.quantity %>)</h5>
                            <p class="text-muted mb-1">
                                Elegant design with premium leather strap.</p>
                            <p class="font-weight-bold">$<%= p.productId.price %></p>
                        </div>
                        </div>
                        <form action="/cart-delete-item" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <input type="hidden" value="<%= p._id %>" name="productId">
                                <button class="remove-btn" type="submit">Remove</button>
                        </form>
                </div>
                <% }) %>
                </div>

                <hr>
                <div class="cart-btn container d-flex justify-content-center align-items-center">
                    <a class="add-to-cart-btn" href="/checkout">Order Now!</a>
                </div>
            <% } else { %>
                <h1>No Products in Cart!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>